
<%- include('partials/headerfront', {title: 'Contact Us', page: 'contact'}) %>

<div class="contact-hero">
    <div class="container text-center">
        <h1>Contact Us</h1>
        <p class="lead">We'd love to hear from you. Get in touch with our team.</p>
    </div>
</div>

<section class="container my-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="contact-info">
                <h2>Get In Touch</h2>
                <p>Have questions about our services? Need support with your account? Or perhaps you're interested in partnering with us? We're here to help!</p>
                
                <div class="contact-method">
                    <div class="icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="details">
                        <h5>Our Location</h5>
                        <p>123 Tech Park, Innovation Street<br>Mumbai, Maharashtra 400001</p>
                    </div>
                </div>
                
                <div class="contact-method">
                    <div class="icon">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div class="details">
                        <h5>Phone Number</h5>
                        <p>+91 98765 43210</p>
                    </div>
                </div>
                
                <div class="contact-method">
                    <div class="icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="details">
                        <h5>Email Address</h5>
                        <p>info@trackandbook.com</p>
                    </div>
                </div>
                
                <div class="contact-method">
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="details">
                        <h5>Working Hours</h5>
                        <p>Monday - Friday: 9:00 AM - 6:00 PM<br>
                        Saturday: 10:00 AM - 4:00 PM<br>
                        Sunday: Closed</p>
                    </div>
                </div>
                
                <div class="social-connect mt-4">
                    <h5>Connect With Us</h5>
                    <div class="social-icons">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="contact-form-container">
                <h3>Send Us a Message</h3>
                <form id="contactForm" class="contact-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="userType" class="form-label">I am a</label>
                        <select class="form-select" id="userType">
                            <option value="customer">Customer</option>
                            <option value="vehicle-owner">Vehicle Owner</option>
                            <option value="driver">Driver</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message</label>
                        <textarea class="form-control" id="message" rows="5" required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="map-section">
