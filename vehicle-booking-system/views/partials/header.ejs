<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#1976d2">
  <link rel="manifest" href="/manifest.json"> <!--new -->
  <title>Track & Book</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container">
      <a class="navbar-brand" href="/">Vehicle Booking</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if (typeof user !== 'undefined') { %>
            <% if (user.role === 'owner') { %>
              <li class="nav-item">
                <a class="nav-link" href="/owner/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/owner/add-vehicle">Add Vehicle</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/customer/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customer/vehicles">Browse Vehicles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customer/bookings">My Bookings</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-4">
